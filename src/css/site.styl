  // styl property ordering: https://github.com/rossPatton/stylint/blob/master/src/data/ordering.json

@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// FONTS

@import 'fonts'

$font-sans = font-stack('Helvetica');
$font-serif = 'AdobeMyungjoStd-Medium-Alphabetic', font-stack('Georgia');

// ******************************************************

// TYPOGRAPHY

@import 'type'

$font-size-larger = 1.3rem

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = .001em
$font-tracking-wider = .05em

html
  font-family: $font-serif
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

.font-sans
  font-family: $font-sans

.font-serif
  font-family: $font-serif

.font-larger
  font-size: $font-size-larger

.line-tighter
  line-height: $font-leading-tighter

.line-larger
  line-height: $font-leading-larger

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)
$color-grey-dark = rgb(74, 74, 74)
$color-grey-mid = rgb(151, 151, 151)
$color-grey-light = rgb(218, 218, 218)
$color-yellow-pale = rgb(255, 254, 238)
$color-yellow-bright = rgb(248, 231, 28)
$color-purple-bright = rgb(141, 18, 255)
$color-blue-bright = rgb(56, 75, 255)
$color-red-bright = rgb(255, 0, 31)


// ******************************************************

// BASIC

html
  background-color: $color-grey-dark
  color: $color-white

img
  max-width: 100%
  height: auto

.mobile-only
  display: initial !important

.desktop-only
  display: none !important

@import 'range'

// ******************************************************

// MEDIA QUERIES

$gutter = 10px

$margin-micro = 5px
$margin-tiny = 10px
$margin-small = 20px
$margin-basic = 30px
$margin-mid = 60px
$margin-large = 80px

$font-size-basic = 14px
$font-size-large = 48px

grid-maker(100%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 20px

  grid-maker(100%, $gutter, m)

  .mobile-only
    display: none !important

  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 30px

  grid-maker(100%, $gutter, l)

  .desktop-only
    display: initial !important

  @import 'responsive/desktop'

@media screen and (min-width: 1366px)

  $font-size-basic = 16px
  $font-size-large = 56px

  font-sizes($font-size-basic, false, $font-size-large)
